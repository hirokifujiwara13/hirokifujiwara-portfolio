---
import { useTranslations } from '../i18n/utils';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center pt-28 pb-16 md:pt-40 md:pb-24 overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900 opacity-95"></div>
  
  <!-- Floating geometric elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-64 h-64 bg-gray-700 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute top-40 right-10 w-80 h-80 bg-gray-600 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-40 left-1/4 w-72 h-72 bg-gray-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    
    <!-- Code terminal UI elements -->
    <div class="absolute top-1/4 right-1/2 transform translate-x-1/2 w-full max-w-3xl opacity-20 md:opacity-25 pointer-events-none">
      <div class="rounded-lg overflow-hidden shadow-lg bg-gray-800 border border-gray-700">
        <div class="h-6 bg-gray-700 flex items-center px-4">
          <div class="w-3 h-3 rounded-full bg-red-500 mr-2"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <div class="p-4 font-mono text-left text-xs md:text-sm">
          <div class="flex">
            <span class="text-green-400 mr-2">$</span>
            <span class="text-gray-300">npm create astro@latest portfolio</span>
          </div>
          <div class="text-gray-500">✓ Creating new project...</div>
          <div class="text-gray-500">✓ Installing dependencies...</div>
          <div class="mt-2 flex">
            <span class="text-green-400 mr-2">$</span>
            <span class="text-gray-300">cd portfolio && npm run dev</span>
          </div>
          <div class="text-gray-500 mt-1">✓ Ready in 1.85s</div>
          <div class="text-green-400 mt-1">✓ Server running!</div>
        </div>
      </div>
    </div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 30px 30px;"></div>
  </div>

  <!-- Content -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl lg:text-7xl font-bold text-white leading-tight mb-3">
        {t('hero.name')}
      </h1>
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-gray-300 leading-tight">
        {t('hero.title')}
      </h2>
      <p class="mt-5 max-w-3xl mx-auto text-xl md:text-2xl text-gray-400">
        {t('hero.subtitle')}
      </p>
      <div class="mt-8 max-w-2xl mx-auto">
        <p class="text-gray-400">
          {t('hero.description')}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-blob {
    animation: blob 15s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>