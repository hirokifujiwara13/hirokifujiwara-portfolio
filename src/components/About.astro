---
import { useTranslations } from '../i18n/utils';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">{t('about.title')}</h2>
    </div>
    
    <div class="md:flex md:items-center md:justify-center md:space-x-12">
      <div class="md:w-1/3 flex justify-center mb-8 md:mb-0">
        <div class="w-56 h-56 rounded-full overflow-hidden bg-gray-100 border-4 border-white shadow-lg">
          <img 
            src="/asset/profile.jpg" 
            alt={t('about.name')} 
            class="w-full h-full object-cover" 
          />
        </div>
      </div>
      
      <div class="md:w-2/3">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
          <h3 class="text-2xl font-bold text-gray-800">{t('about.name')}</h3>
          <div class="mt-3 space-y-2 text-gray-700">
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
                <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
              </svg>
              <span>{t('about.job')}</span>
            </p>
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <span>{t('about.location')}</span>
            </p>
          </div>
          <p class="mt-4 text-gray-600">
            {t('about.description')}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>